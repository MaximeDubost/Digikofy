<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ******************
         * General styles *
         ****************** -->

    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">162dp</item>
        <!--
        <item name="android:layout_marginLeft">@dimen/default_dimen</item>
        <item name="android:layout_marginRight">@dimen/default_dimen</item>
        <item name="android:layout_marginTop">@dimen/short_dimen</item>
        <item name="android:layout_marginBottom">@dimen/very_tiny_dimen</item>
        -->
        <item name="android:layout_marginStart">@dimen/short_dimen</item>
        <item name="android:layout_marginEnd">@dimen/short_dimen</item>
        <item name="android:layout_marginTop">@dimen/very_tiny_dimen</item>
        <item name="android:layout_marginBottom">@dimen/very_tiny_dimen</item>
        <item name="cardCornerRadius">@dimen/default_dimen</item>
        <item name="cardElevation">@dimen/minimum_dimen</item>
    </style>

    <!-- ***********************
         * Classic text styles *
         *********************** -->

    <style name="DefaultTextStyle">
        <item name="android:fontFamily">@font/mada_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BlueTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="GreyTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="RegularGreyTextStyle">
        <item name="android:fontFamily">@font/mada_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAlignment">textStart</item>
        <item name="drawableTint">@color/grey</item>
    </style>

    <!-- **********************
         * Titles text styles *
         ********************** -->

    <!-- DO NOT USE IT -->
    <style name="BoldTitleTextStyle">
        <item name="android:fontFamily">@font/mada_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldTitleTextStyle36" parent="BoldTitleTextStyle">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="BoldTitleTextStyle32" parent="BoldTitleTextStyle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="BoldTitleTextStyle24" parent="BoldTitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">@dimen/default_dimen</item>
        <item name="android:layout_marginRight">@dimen/default_dimen</item>
        <item name="android:layout_marginTop">@dimen/short_dimen</item>
    </style>

    <style name="BoldTitleTextStyle20" parent="BoldTitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">@dimen/default_dimen</item>
        <item name="android:layout_marginRight">@dimen/default_dimen</item>
        <item name="android:layout_marginTop">@dimen/short_dimen</item>
    </style>

    <style name="MediumTitleTextStyle24" parent="BoldTitleTextStyle">
        <item name="android:fontFamily">@font/mada_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- ***********************
         * Buttons text styles *
         *********************** -->

    <style name="DefaultButton">
        <item name="android:fontFamily">@font/mada_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/blue_rounded_corner</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/short_dimen</item>
        <item name="android:paddingRight">@dimen/short_dimen</item>
        <item name="android:layout_marginBottom">@dimen/tiny_dimen</item>
    </style>

    <style name="DeleteButton">
        <item name="android:fontFamily">@font/mada_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@drawable/red_rounded_corner</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/short_dimen</item>
        <item name="android:paddingRight">@dimen/short_dimen</item>
        <item name="android:layout_marginBottom">@dimen/tiny_dimen</item>
    </style>

    <style name="NewCoffeeHomeButton">
        <item name="android:fontFamily">@font/mada_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginLeft">@dimen/default_dimen</item>
        <item name="android:layout_marginRight">@dimen/default_dimen</item>
        <item name="android:layout_marginTop">@dimen/very_tiny_dimen</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:paddingStart">@dimen/default_dimen</item>
        <item name="android:drawablePadding">@dimen/short_dimen</item>
    </style>

    <style name="ShowAllButtonTextStyle">
        <item name="android:fontFamily">@font/mada_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginLeft">@dimen/default_dimen</item>
        <item name="android:layout_marginRight">@dimen/default_dimen</item>
        <item name="android:layout_marginTop">@dimen/short_dimen</item>
        <item name="android:textAlignment">textStart</item>
        <item name="drawableTint">@color/grey</item>
        <item name="drawableRightCompat">@drawable/ic_arrow_forward</item>
    </style>

    <!-- **************************
         * Bottom Navigation View *
         ************************** -->

    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/mada_medium</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>