<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Classic text styles -->

    <style name="DefaultTextStyle">
        <item name="android:fontFamily">@font/mada_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BlueTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="GreyTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <!-- Titles text styles -->

    <style name="BoldTitleTextStyle">
        <item name="android:fontFamily">@font/mada_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldTitleTextStyle36" parent="BoldTitleTextStyle">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="BoldTitleTextStyle32" parent="BoldTitleTextStyle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="BoldTitleTextStyle24" parent="BoldTitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MediumTitleTextStyle24" parent="BoldTitleTextStyle">
        <item name="android:fontFamily">@font/mada_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Buttons text styles -->

    <style name="DefaultButtonTextStyle">
        <item name="android:fontFamily">@font/mada_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ShowAllButtonTextStyle">
        <item name="android:fontFamily">@font/mada_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>