<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="fr.maximedubost.digikofyapp.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="fr.maximedubost.digikofyapp.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_userFragment"
            app:destination="@id/userFragment" />
        <action
            android:id="@+id/action_mainFragment_to_createMachineFragment"
            app:destination="@id/createMachineFragment" />
        <action
            android:id="@+id/action_mainFragment_to_preparationDetailsFragment"
            app:destination="@id/preparationDetailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_machineDetailsFragment"
            app:destination="@id/machineDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="fr.maximedubost.digikofyapp.ui.register.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/userFragment"
        android:name="fr.maximedubost.digikofyapp.ui.user.UserFragment"
        android:label="user_fragment"
        tools:layout="@layout/user_fragment" />
    <fragment
        android:id="@+id/createMachineFragment"
        android:name="fr.maximedubost.digikofyapp.ui.machine.CreateMachineFragment"
        android:label="create_machine_fragment"
        tools:layout="@layout/create_machine_fragment" >
        <action
            android:id="@+id/action_createMachineFragment_to_scanMachineFragment"
            app:destination="@id/scanMachineFragment" />
    </fragment>
    <fragment
        android:id="@+id/scanMachineFragment"
        android:name="fr.maximedubost.digikofyapp.ui.machine.ScanMachineFragment"
        android:label="ScanMachineFragment" />
    <fragment
        android:id="@+id/preparationDetailsFragment"
        android:name="fr.maximedubost.digikofyapp.ui.preparation.PreparationDetailsFragment"
        android:label="preparation_details_fragment"
        tools:layout="@layout/preparation_details_fragment" >
        <argument
            android:name="preparationId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/machineDetailsFragment"
        android:name="fr.maximedubost.digikofyapp.ui.machine.MachineDetailsFragment"
        android:label="MachineDetailsFragment" >
        <argument
            android:name="machineId"
            app:argType="string" />
    </fragment>
</navigation>