<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_preparation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/CardStyle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/card_content"
                app:layout_constraintStart_toStartOf="@id/card_content"
                android:padding="@dimen/short_dimen">

                <TextView
                    android:id="@+id/tv_preparation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CafÃ© travail"
                    style="@style/MediumTitleTextStyle24"
                    android:paddingBottom="@dimen/very_tiny_dimen"/>

                <TextView
                    android:id="@+id/tv_preparation_coffee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Espresso"
                    style="@style/DefaultTextStyle"
                    android:paddingBottom="@dimen/very_tiny_dimen"/>

                <TextView
                    android:id="@+id/tv_preparation_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tous les Sam, Dim"
                    style="@style/DefaultTextStyle"
                    android:paddingBottom="@dimen/very_tiny_dimen"/>

                <TextView
                    android:id="@+id/tv_preparation_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30, 19:30"
                    style="@style/DefaultTextStyle"
                    android:paddingBottom="@dimen/very_tiny_dimen"/>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_start_preparation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/very_large_dimen"
        android:layout_marginEnd="@dimen/medium_dimen"
        android:backgroundTint="@color/white"
        android:contentDescription="Utiliser"
        android:src="@drawable/ic_play"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@id/card_content"
        app:layout_constraintEnd_toEndOf="@id/card_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="end" />

</FrameLayout>